<div class="d-flex align-items-center py-4 h-100">
  <main class="form-signup w-100 m-auto">
    <form>
      <%#<img class="mb-4" src="/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57" />%>
      <div class="mb-4">
        <h1>Training App</h1>
      </div>

      <h1 class="h3 mb-3 fw-normal">Please sign up</h1>

      <div class="mb-3">
        <div class="form-floating">
          <input type="text" class="form-control rounded-bottom-0" id="floatingInput" placeholder="Name" style="margin-bottom: -1px;"/>
          <label for="floatingInput">Name</label>
        </div>

        <div class="form-floating">
          <input type="date" class="form-control rounded-0" id="floatingInput" placeholder="Birthday" style="margin-bottom: -1px;"/>
          <label for="floatingInput">Birthday</label>
        </div>

        <div class="form-floating">
          <input type="text" class="form-control rounded-0" id="floatingInput" placeholder="Gender" style="margin-bottom: -1px;"/>
          <label for="floatingInput">Gender</label>
        </div>

        <div class="form-floating">
          <input type="text" class="form-control rounded-0" id="floatingInput" placeholder="Hometown" style="margin-bottom: -1px;"/>
          <label for="floatingInput">Hometown</label>
        </div>

        <div class="form-floating">
          <input type="email" class="form-control rounded-0" id="floatingInput" placeholder="Email" style="margin-bottom: -1px;"/>
          <label for="floatingInput">Email</label>
        </div>

        <div class="form-floating">
          <input type="password" class="form-control rounded-0" id="floatingPassword" placeholder="Password" style="margin-bottom: -1px;" /> 
          <label for="floatingPassword">Password</label>
        </div>

        <div class="form-floating">
          <input type="password" class="form-control rounded-top-0" id="floatingPassword" placeholder="Password" /> 
          <label for="floatingPassword">Password confirmation</label>
        </div>
      </div>

      <button class="btn btn-primary w-100 py-2" type="submit">Sign up</button>
    </form>

    <div class="mt-3">
      <p>
        Already have an account? <%= link_to "Sign in", new_session_path %>
      </p>
    </div>

    <p class="mt-5 mb-3 text-body-secondary">Â© 2025</p>
  </main>
</div>
