<div class="card">
  <div class="card-body">
    <div class="d-flex justify-content-center">
      <%= image_tag user.picture_url || "avatar.png", width: 96, class: "rounded-circle ratio ratio-1x1", style: "width: 96px;" %>
    </div>

    <div class="mt-5">
      <div>
        <div class="row">
          <div class="col col-12 col-md-6">
            <%= render partial: "user_info_item", locals: { title: "Name", value: user.name || "-" } %>
          </div>
          <div class="col">
            <%= render(
              partial: "user_info_item", 
              locals: { 
                title: "Birthday", 
                value: user.birthday&.strftime("%m/%d/%Y") || "-" 
              }
            ) %>
          </div>
        </div>

        <div class="row">
          <div class="col col-12 col-md-6">
            <%= render partial: "user_info_item", locals: { title: "Gender", value: user.gender || "-" } %>
          </div>
          <div class="col">
            <%= render partial: "user_info_item", locals: { title: "Hometown", value: user.hometown || "-" } %>
          </div>
        </div>

        <div class="row">
          <%= render partial: "user_info_item", locals: { title: "Email", value: user.email || "-" } %>
        </div>
      </div>
    </div>
  </div>
</div>
